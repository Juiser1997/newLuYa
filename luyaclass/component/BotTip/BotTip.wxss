.loading{height: 80rpx;width: 100%;color:#999;display: flex;box-sizing: border-box;line-height: 80rpx;font-size: 28rpx;justify-content: center;border-radius: 8rpx;}
.loading image{width: 40rpx;height: 40rpx;align-self: center;margin-left: 25rpx;}
.loading>view{width: auto;height: 80rpx;display: flex;}
.line{width: 90%; margin: auto;height: 1rpx;text-align: center;font-size: 24rpx;color: #aaa;background: #ccc;}
.line text{position: relative;top: -8px;background: #fff;padding: 10px 10px;}