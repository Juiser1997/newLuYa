.video-item{margin: 0 30rpx;border-bottom: 1rpx solid #f8f9fa;}
.video-item:nth-last-child(1){border:none;}
.video-top{display: flex;justify-content: space-between;line-height: 70rpx;font-size: 32rpx;}
.video-top-right{color:#999;font-size: 24rpx;}
.video-bottom{display: flex;justify-content: space-between;line-height: 60rpx;color:#999;font-size: 24rpx;}
.video-box{height:390rpx;width: 690rpx;position: relative;}
.video-box>.bg{width: 100%;height: 100%;border-radius: 5rpx;}
.video-box>.icon-play{position: absolute;width: 120rpx;height: 120rpx;top:135rpx;left:285rpx;}
.video-box>.video-time{position: absolute; width: 72rpx;text-align: center;line-height: 40rpx;bottom: 10rpx;right: 10rpx;background-color: #000;color:#ccc;font-size: 24rpx;border-radius: 5rpx;}