.page{width: 100%;min-height: 100vh;overflow: hidden;background-color:#f3f3f3;}
.top{padding-left: 40rpx;background-color: #fff;margin-top: 40rpx;}
.input-group{display: flex;line-height: 110rpx;font-size: 32rpx;background-color: #fff;box-sizing: border-box;border-bottom: 1rpx solid #ededed;}
.input-group:nth-last-child(1){border: none;}
.sp{justify-content: space-between;padding-right:20rpx;margin-top: 20rpx;}
.pd{padding-left: 40rpx;}
.label{width: 150rpx;}
.Introduction{position: absolute;top:20rpx;left: 40rpx;}
.input-box>input{height: 110rpx;line-height: 110rpx;}
.getcode{color:#4b6dff;}
.rigth{display: flex;}
.rigth>image{width: 30rpx;height: 30rpx;align-self: center;margin-left: 15rpx;}
.plac{line-height: 110rpx;color:#999;}
.text-arear{background-color: #fff;margin-top: 20rpx;height: 160rpx;padding: 20rpx;box-sizing: border-box;position: relative;}
.text-arear textarea{width: 100%;height: 100%;padding-left: 120rpx;box-sizing: border-box;}
.login{width: 670rpx;line-height: 96rpx;background-color:#fff;border-radius: 10rpx;text-align: center;font-size: 36rpx;font-weight: bolder;margin: 40rpx;border:1rpx solid #ddd;}
.right-pick{display: flex;width: 180rpx;height: 180rpx;}
.rigth-gp{display: flex;width: 180rpx;height: 180rpx;}
.right-gp>image{width: 30rpx;height: 30rpx;align-self: center;margin-left: 15rpx;}
