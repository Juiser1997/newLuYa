.page{width: 100%;min-height: 100vh;overflow: hidden;}
.text-area{padding: 30rpx;height: 200rpx;overflow: hidden;position: relative;}
.txt-tips{position: absolute;bottom: 0;right: 30rpx;font-size: 24rpx;color:#999;}
.text-area textarea{width: 100%;height: 100%;}
.tips{font-size: 24rpx;color:#999;line-height: 60rpx;padding: 0 25rpx;}
.photo-area{padding: 0 30rpx;display: flex;min-height: 550rpx;flex-wrap: wrap;}
.photo-item{display: flex;font-size: 24rpx;flex-direction: column;text-align: center;color:#999;padding: 10rpx 0;}
.check-photo{width: 128rpx;height: 128rpx;background-color: #f8f8f8;margin:10rpx;border:1rpx solid #ededed;line-height: 128rpx;text-align: center;border-radius: 28rpx;}
.check-photo .item-photo-icon{font-size: 50rpx;color:#848484;}
.imgbox{width: 210rpx;height: 210rpx;margin: 10rpx;position: relative;}
.img-add{width: 210rpx;height: 210rpx;background-color: #d7d7d7;color:#fff;margin: 10rpx;display: flex;justify-content: center;}
.add{font-size: 45rpx;align-self: center;}
.videobox{height: 420rpx;width: 250rpx;position: relative;}
.videobox video{width: 100%;height: 100%;}
.covimg{width: 100%;height: 100%;}
.videobox .icon-video{width: 50rpx;height: 50rpx;position: absolute;top:185rpx;right: 100rpx;z-index: 1000;}
.imgbox>image{width: 100%;height: 100%;}
.rigth{display: flex;width: 100rpx;justify-content: flex-end;}
.rigth>image{width: 30rpx;height: 30rpx;align-self: center;}
.btn-group{display: flex;justify-content: space-between;padding: 0 30rpx;margin-bottom: 20rpx;}
.btn-group-item{display:flex;line-height: 50rpx;font-size: 28rpx;color:#999;border-radius:25rpx;border:1rpx solid #ededed;padding: 0 20rpx 0 10rpx;background-color: #f8f8f8;}
.btn-item-icon{font-size: 36rpx;margin-right: 10rpx;}
.btn-group-release{padding: 0 32rpx;box-sizing: border-box;display: flex;justify-content: space-between;}
.btn-group-release>view{line-height: 96rpx;text-align: center;border-radius: 10rpx;font-size: 36rpx;}
.release-btn{width: 458rpx;background-color: #4b6dff;color:#fff;}
.cancel{width: 208rpx;background-color:#f8f8f8; border:1rpx solid #ededed;color: #999;}
.address{display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 1;overflow: hidden;max-width: 400rpx;}
.tishi{width: 340rpx;height: 160rpx;border-radius: 8rpx;background-color: #fff;position: fixed;bottom: 30rpx;left: 205rpx;box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1)}
.tishi::after{position: absolute;display: inline-block;top: 135rpx;
    left: 150rpx;width:0 ;height: 0;content: '';border-style: solid;border-width: 20rpx;
    border-color: #fff #fff transparent transparent;transform:rotate(135deg);box-shadow: 2rpx -2rpx 3rpx 0 rgba(0, 0, 0, 0.1);}
.tishi-bg{width: 245rpx;height: 115rpx;position: absolute;top:-50rpx;right:48rpx;}
.icon-cha{width: 20rpx;height: 20rpx;position: absolute;top:20rpx;right: 20rpx;color: #999;}
.ts-txt{font-size: 28rpx;color:#666;text-align: center;margin-top: 100rpx;}