.video-box{width: 100%;height: 424rpx;}
.video-box>video{width: 100%;height: 100%;}
.page{padding: 0 20rpx;}
.title{font-size: 45rpx;font-weight: bold;line-height: 60rpx;padding: 20rpx 0;}
.top{color:#999;font-size: 28rpx;}
.xie{margin: 0 20rpx;}
.mid{display: flex;justify-content: space-between;height: 100rpx;box-sizing: border-box;border-bottom: 1rpx solid #f0f0f0;}
.mid-left{display: flex;height: 100%;line-height: 100rpx;}
.head{height: 60rpx;width: 60rpx;border-radius: 100%;align-self: center;}
.nickName{margin: 0 20rpx;}
.mid-rigth{width: 120rpx;line-height: 48rpx;border:2rpx solid #4b6dff;align-self: center;font-size: 35rpx;color: #4b6dff;text-align: center;border-radius: 5rpx;}
.content{margin-top: 40rpx;margin-bottom: 60rpx;}
.reward{display: flex;flex-direction: column;align-items: center;}
.reward-text{font-size: 34rpx;font-weight: bold;line-height: 60rpx;}
.reward-btn{width: 260rpx;text-align: center;line-height: 64rpx;color:#fff;background-color:#4b6dff;border-radius: 10rpx;}
.share{display: flex;margin-top: 50rpx;}
.share>view{width: 140rpx;line-height: 48rpx;color:#999;border:1rpx solid #eee;border-radius: 5rpx;font-size: 24rpx;display: flex;justify-content: center;margin-right: 20rpx;}
.icon-wx{height: 36rpx;width: 36rpx;align-self: center;}
